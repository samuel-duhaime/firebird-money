{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Update Main",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Git Checkout Main",
        "Git Pull Origin Main",
        "Npm Install Frontend Dependencies"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Frontend and Backend Dev",
      "type": "shell",
      "command": "",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Next Dev", "Backend Dev"]
    },
    {
      "label": "Git Checkout Main",
      "type": "shell",
      "command": "git",
      "args": ["checkout", "main"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Git Pull Origin Main",
      "type": "shell",
      "command": "git",
      "args": ["pull", "origin", "main"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Npm Install Frontend Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Next Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Backend Dev",
      "type": "shell",
      "command": "echo",
      "args": ["There are no backend."],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
  ]
}
